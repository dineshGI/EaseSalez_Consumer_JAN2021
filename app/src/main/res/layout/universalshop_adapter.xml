<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/store_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:adjustViewBounds="true"
                    android:fitsSystemWindows="true"
                    android:padding="4dp"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:text="shopname"
                            android:textColor="@color/text_brand"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/Town"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center|left"
                            android:text="City"
                            android:textColor="@color/button_gray"
                            android:textSize="12sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_place_black_24dp" />

                            <TextView
                                android:id="@+id/Address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="2dp"
                                android:gravity="center|left"
                                android:text="Addressfdsfdsfsdfsdf dsfsdfsdf dfdsfsdffdsfdsfsdfsdfsd"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:textColor="@color/button_gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/review_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FBEEBE"
                            android:gravity="center|left"
                            android:text="Free Delivery for first order"
                            android:textColor="@color/button_gray"
                            android:textSize="14dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/ShopPromotionMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FBEEBE"
            android:gravity="center"
            android:padding="1dp"
            android:text="Shop promo message"
            android:textColor="@color/button_gray"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>