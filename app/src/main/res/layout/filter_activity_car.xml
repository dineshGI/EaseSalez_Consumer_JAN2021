<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:text="@string/FindCar"
                    android:textColor="@color/button_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_close"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NewCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/NewCar"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/UsedCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/UsedCar"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:text="@string/Location"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|end"
                        android:text="Chennai"
                        android:textColor="@color/button_gray"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:tint="@color/blue" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:text="@string/Budget"
                android:textColor="@color/button_gray"
                android:textSize="14sp" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/BudgetSeekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                app:bar_color="@color/lightgray"
                app:bar_highlight_color="@color/colorPrimary"
                app:corner_radius="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BudgetMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/BudgetMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/BodyType"
                android:textColor="@color/button_gray"
                android:textSize="14sp" />

            <include layout="@layout/car_type" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:gravity="center|start"
                android:text="@string/ModelYear"
                android:textColor="@color/button_gray"
                android:textSize="14sp" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/YearSeekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                app:bar_color="@color/lightgray"
                app:bar_highlight_color="@color/colorPrimary"
                app:corner_radius="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/YearMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/YearMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="@string/MakeModel"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/model_bg_border"
                    android:capitalize="none"
                    android:hint="@string/SearchModel"
                    android:imeOptions="actionDone"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/button_gray"
                    android:textColorHint="@color/hint_gray"
                    android:textSize="14sp" />

                <com.gieasesales.utils.ExpandableHeightGridView
                    android:id="@+id/makelistView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@android:color/transparent"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="2"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:verticalSpacing="20dp"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:gravity="center|start"
                android:text="@string/KMDriven"
                android:textColor="@color/button_gray"
                android:textSize="14sp" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/KMSeekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                app:bar_color="@color/lightgray"
                app:bar_highlight_color="@color/colorPrimary"
                app:corner_radius="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/KMMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/KMMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_sqaure_bg_border"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/FuelType"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_fueltype"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_down"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:tint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fuelcheckbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.gieasesales.utils.ExpandableHeightGridView
                    android:id="@+id/fueltypelistView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@android:color/transparent"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:verticalSpacing="20dp"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/Ownership"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_ownership"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_down"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:tint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ownershipcheckbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.gieasesales.utils.ExpandableHeightGridView
                    android:id="@+id/ownershiplistView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@android:color/transparent"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:verticalSpacing="20dp"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/Transmission"
                    android:textColor="@color/button_gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_transmission"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_down"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:tint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transmisioncheckbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.gieasesales.utils.ExpandableHeightGridView
                    android:id="@+id/transmissionlistView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@android:color/transparent"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:verticalSpacing="20dp"
                    android:visibility="visible" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/border_btnbg_orange"
                android:text="@string/Search"
                android:textAllCaps="true" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>