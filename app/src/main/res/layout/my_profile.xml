<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/prof_upload"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/p_name"
                style="@style/edittext"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:hint="@string/name"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <EditText
                android:id="@+id/p_email"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/email"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <EditText
                android:id="@+id/p_mobile"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/mobile"
                android:maxLength="10"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <EditText
                android:id="@+id/p_address_one"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/address_one"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <EditText
                android:id="@+id/p_address_two"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/address_two"
                android:visibility="gone"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <EditText
                android:id="@+id/p_city"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/city"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <EditText
                android:id="@+id/p_pincode"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/pincode"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/p_dob"
                    style="@style/edittext"
                    android:drawablePadding="10dp"
                    android:hint="@string/dob"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_gray" />

                <ImageView
                    android:id="@+id/cal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_event_available_black_24dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_spinner">

                <Spinner
                    android:id="@+id/p_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:background="@drawable/border_spinner">

                <Spinner
                    android:id="@+id/doc_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </RelativeLayout>

            <EditText
                android:id="@+id/p_docno"
                style="@style/edittext"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:hint="@string/doc_no"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/doc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Document Uploaded Verification Pending"
                    android:textColor="@color/button_gray"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/button_blue"
                    android:text="UPLOAD"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary"
                    android:text="VIEW"
                    android:textColor="@color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/p_save"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>